<Button>:
    background_color: (.3, .3, .3, 1)
<GameLabel>:
    size_hint_y: 0.25
    text_size: self.size
    halign: "center"
    valign: "top"
    padding: 0, 5
<SectionLabel>:
    font_size: 25
    text_size: self.size
    halign: "left"
    valign: "middle"
    padding: 0, 10
BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Spinner:
                text: 'Name'
                values:
            Button:
            Button:
            Button:
            Button:
            Button:
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            scroll_wheel_distance: 50
            bar_width: 2
            BoxLayout:
                orientation: 'vertical'
                id: games_box
                padding: 10, 10
                size_hint_y: None
                height: app.games_box_height